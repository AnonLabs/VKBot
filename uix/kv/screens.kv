<LB@Label>:
    font_size: '15sp'
    color: 0, .2, .4, 1
    size_hint: None, None
    size: self.texture_size[0]+5, self.texture_size[1]+5

<Head@LB>:
    font_size: '17sp'
    size: self.texture_size[0]+10,self.texture_size[1]+10
    
<TI@TextInput>:
    size_hint_y: None
    font_size: '16sp'
    height: self.minimum_height+10
    multiline: False

<Apply@Button>:
    text: 'Принять'
    font_size: '16sp'
    background_normal: ''
    background_color: 0, .2, .4, 1
    size_hint: None, None
    size: self.texture_size[0]*2.3, self.texture_size[1]*2.3

<Screen@Screen>:
    canvas.before:
        #Color: 
            #rgba: .85, .66, .01, 1
        Rectangle:
            source: 'data/images/background.jpg'
            pos: self.pos
            size: self.size


<TwoFAKeyEnterScreen>:
    name: 'twofa_screen'
    
    Head:
        text: 'Код для двухфакторной авторизации'
        pos_hint: {'center_x':.5}
        pos: self.pos[0], twofa_textinput.pos[1]+twofa_textinput.height*1.4
    TI:
        id: twofa_textinput
        size_hint_x: .65
        pos_hint: {'center_x':.5, 'center_y':.7}
    Apply:
        text: 'Подтвердить'
        pos_hint: {'center_x':.5}
        pos: self.pos[0], twofa_textinput.pos[1]-twofa_textinput.height*1.5
        on_release: root.twofa_auth()


<AuthScreen>:
    name: 'auth_screen'

    GridLayout:
        rows: 5
        spacing: dp(3)
        size_hint_y: None
        height: self.minimum_height
        pos_hint: {'center_x':.6,'center_y':.75}

        Label:
            text: 'Авторизация ВК'
            color: 0, .2, .4, 1
            font_size: '20sp'
            padding_y: dp(5)
            size_hint: None, None
            size: self.texture_size

        TextInput:
            hint_text: 'Логин'.decode('utf-8') #KIVY BUG
            id: login
            size_hint_y: None
            font_size: '18sp'
            height: self.minimum_height
            multiline: False

        TextInput:
            hint_text: 'Пароль'.decode('utf-8') #KIVY BUG
            id: pass_input
            size_hint_y: None
            font_size: '18sp'
            height: self.minimum_height
            multiline: False
            password: show_pass.active == False

        GridLayout:
            cols: 2
            padding: dp(6)
            size_hint_y: None
            size: self.minimum_size

            Label:
                id: show_pass_label
                text: 'Показать пароль'
                color: 0, .2, .4, 1
                font_size: '16sp'
                padding_y: dp(3)
                size_hint: None, None
                size: self.texture_size

            CheckBox:
                id: show_pass
                size_hint: None, None
                height: show_pass_label.height

        GridLayout:
            cols: 3
            size_hint_y: None
            size: self.minimum_size

            Label:
            Button:
                id: enter
                text: 'Войти'
                font_size: '16sp'
                padding_y: dp(10)
                background_normal: ''
                background_color: 0, .2, .4, 1
                size_hint: 1.3, None
                height: self.texture_size[1]
                on_release: root.log_in()
            Label:

    Button:
        id: pass_auth
        text: 'Пропустить'
        font_size: '16sp'
        background_normal: ''
        background_color: 0, .2, .4, .5
        size_hint: None, None
        size: self.texture_size[0]*2.3, self.texture_size[1]*2.3
        pos_hint: {'center_x':.5}
        pos: self.pos[0], root.height*.05
        on_release: root.parent.show_main_screen()
        disabled: False


<MainScreen>:
    name: 'main_screen'
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            id: actionbar
            ActionView:
                ActionPrevious:
                ActionOverflow:
                    mode: 'spinner'
                    ActionButton:
                        text: 'Настройки'
                        on_press: app.open_settings()                        
                    ActionButton:
                        text: 'Авторизация'
                        minimum_width: '110sp'
                        on_release:  
                            root.parent.show_auth_screen()
                    ActionButton:
                        text: 'Выйти'
                        on_press: root.logout()

        Carousel:
            loop: True

            FloatLayout:
                Apply:
                    id: main_btn
                    size_hint_x: .5
                    pos_hint: {'center_x':.5}
                    pos_hint_y: None
                    pos: self.pos[0], actionbar.pos[1]-actionbar.height*1.5
                    on_press: root.on_main_btn_press()
                Head:
                    id: answers_count_lb
                    pos_hint: {'center_x':.5}
                    pos_hint_y: None
                    pos: self.pos[0], main_btn.pos[1]-actionbar.height*1.3
                Apply:
                    id: open_cc_screen_btn
                    text: 'Настройки пользовательских команд'
                    width: main_btn.width
                    pos_hint: {'center_x':.5, 'center_y':.1}
                    on_press: root.parent.show_custom_commands_screen()
                    disabled: True
                    background_color: 1, 0, 0, .8 # WIP feature

            FloatLayout:
                Apply:
                    text: 'Взломать Пентагон'
                    size_hint_x: .5
                    pos_hint: {'center_x':.5, 'center_y':.5}
                    on_press: self.text = 'В разработке'


<CustomCommandsScreen>:
    name: 'cc_screen'

    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(5)

        ScrollView:
            GridLayout:
                id: cc_list
                cols: 1
                spacing: dp(2)

        GridLayout:
            cols: 3
            size_hint_y: None
            height: self.minimum_height

            GridLayout:
                cols: 2

                Button:
                    text: 'Добавить команду'
                    size_hint_x: None
                    width: self.texture_size[0]
                    on_release: root.open_edit_popup()

                Label:
            Button:
                text: 'Вернуться'
                size_hint_y: None
                height: self.texture_size[1]*2.4 + dp(3)
                on_release: root.leave()
            GridLayout:
                cols: 2

                Label:
                Button:
                    text: 'Отсортировать'
                    size_hint_x: None
                    width: self.texture_size[0] + dp(3)
                    on_release: root.sort_blocks()
